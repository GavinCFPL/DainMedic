{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start API (micromamba)",
      "type": "shell",
      "command": "micromamba",
      "args": [
        "run",
        "-n",
        "dainmedic",
        "python",
        "-m",
        "uvicorn",
        "main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend/app"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "isBackground": true,
      "runOptions": {
        "instanceLimit": 1
      }
    },
    {
      "label": "Test Backend Dependencies",
      "type": "shell",
      "command": "micromamba",
      "args": [
        "run",
        "-n",
        "dainmedic",
        "python",
        "-c",
        "import fastapi, uvicorn, rdkit, numpy, pandas; print('âœ“ All dependencies available')"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Check Micromamba Environment",
      "type": "shell",
      "command": "micromamba",
      "args": ["info", "-e"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}