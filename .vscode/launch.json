{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch API (Codespaces)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/backend/app/main.py",
      "cwd": "${workspaceFolder}/backend/app",
      "env": {
        "DATABASE_URL": "sqlite:////workspaces/DainMedic/.data/dainmedic.sqlite",
        "SECRET_KEY": "dev-secret-key-change-in-production"
      },
      "console": "integratedTerminal",
      "python": "/opt/micromamba/envs/dainmedic/bin/python",
      "args": [],
      "preLaunchTask": "Test Backend Dependencies",
      "postDebugTask": null
    },
    {
      "name": "Launch API with Uvicorn (Codespaces)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload"
      ],
      "cwd": "${workspaceFolder}/backend/app",
      "env": {
        "DATABASE_URL": "sqlite:////workspaces/DainMedic/.data/dainmedic.sqlite",
        "SECRET_KEY": "dev-secret-key-change-in-production"
      },
      "console": "integratedTerminal",
      "python": "/opt/micromamba/envs/dainmedic/bin/python",
      "preLaunchTask": "Test Backend Dependencies"
    }
  ]
}